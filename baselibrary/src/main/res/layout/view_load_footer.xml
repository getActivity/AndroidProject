<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical">

    <View
        android:id="@+id/wg_list_footer_while_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_6"
        android:background="@color/white"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/wg_list_footer_load_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wg_list_footer_load_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/icon_loading_more" />

        <TextView
            android:id="@+id/wg_list_footer_load_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:paddingTop="@dimen/space_20"
            android:paddingBottom="@dimen/space_20"
            android:text="@string/list_view_more"
            android:textColor="#a4a4a4"
            android:textSize="@dimen/font_size_28px" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/wg_list_footer_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#a4a4a4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:paddingTop="@dimen/space_30"
            android:paddingBottom="@dimen/space_30"
            android:text="@string/list_view_line"
            android:textColor="#a4a4a4"
            android:textSize="@dimen/font_size_28px" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#a4a4a4" />
    </LinearLayout>


</LinearLayout>
