<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_10"
    android:paddingVertical="@dimen/dp_8"
    tools:background="@color/white"
    tools:context=".ui.dialog.SafeDialog">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_safe_phone"
        style="@style/EditTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_15"
        android:hint="@string/common_phone_input_hint"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_10"
        android:singleLine="true"
        android:textSize="@dimen/sp_14"
        tools:text="12345678910" />

    <View
        style="@style/HorizontalLineStyle"
        android:layout_marginHorizontal="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.hjq.custom.widget.view.RegexEditText
                android:id="@+id/et_safe_code"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_15"
                android:ellipsize="end"
                android:hint="@string/common_code_input_hint"
                android:inputType="phone"
                android:maxLength="@integer/sms_code_max_length"
                android:paddingHorizontal="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_10"
                android:singleLine="true"
                android:textSize="@dimen/sp_13"
                app:regexType="number" />

            <View
                style="@style/HorizontalLineStyle"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="@dimen/dp_10" />

        </FrameLayout>

        <com.hjq.custom.widget.view.CountdownView
            android:id="@+id/cv_safe_countdown"
            style="@style/CountdownViewStyle"
            android:layout_marginHorizontal="@dimen/dp_5" />

    </LinearLayout>

</LinearLayout>