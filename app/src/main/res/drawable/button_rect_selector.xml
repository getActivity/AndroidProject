<?xml version="1.0" encoding="utf-8"?>
<!-- 直角按钮样式 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 禁用状态 -->
    <item android:drawable="@color/common_button_disable_color" android:state_enabled="false" />

    <!-- 按压状态 -->
    <item android:drawable="@color/common_button_pressed_color" android:state_pressed="true" />

    <!-- 焦点状态 -->
    <item android:drawable="@color/common_button_pressed_color" android:state_focused="true" />

    <!-- 默认状态 -->
    <item android:drawable="@color/common_accent_color" />

</selector>